on-arrival: {!
// set up the infrastructure
Q.cd_formed = 1;
Q.parties.push('cd');

Q.workers_cd = 10;
Q.workers_spd -= 3;
Q.new_middle_cd = 1;
Q.old_middle_cd = 0;
Q.rural_cd = 0;
Q.unemployed_cd = 2;
Q.catholics_cd = 0;

Q.workers_other -= 5;

if (Q.unions_independent) {
    Q.workers_cd += 8;
}

// update all records
Q.cd_r = 0;
Q.old_cd_r = 0;
for (var record of Q.election_records) {
    record['cd'] = 0;
}
for (var record of Q.party_support_records) {
    record['cd'] = 0;
}
!}
