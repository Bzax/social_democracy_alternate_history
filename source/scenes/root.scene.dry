/**
 * Add support delta to a party among one class-group.
 * Example: addsupport('homeowners','a', +2)
 */
Q.addsupport = function(groupKey, party, delta) {
  var group = Q.classGroups[groupKey];
  if (!group) throw new Error("Unknown class group: " + groupKey);

  for (var cls of group) {
    var k = cls + '_' + party;
    var cur = Number(Q[k] ?? 0);
    Q[k] = cur + delta;
  }
};

/**
 * Convenience: add support to multiple parties at once.
 * Example: addsupportMany('homeowners', {a:+2, v:-1})
 */
Q.addsupportMany = function(groupKey, deltasByParty) {
  for (var p in deltasByParty) {
    Q.addsupport(groupKey, p, deltasByParty[p]);
  }
};

